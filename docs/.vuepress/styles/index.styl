$contentWidth = 90%

.theme-default-content code 
  color #d63200

html, body 
  width 100%
  height 100%

.sidebar 
  z-index 20

.page-edit, .page-nav, h1 
  position relative
  z-index 2


.en, .zh
  margin-bottom 3em

.auth-info
  font-style oblique
  font-family Garamond

@media (max-width: 419px) 
  .theme-default-content div[class*="language-"] 
    margin 0

.link-active
  color #e2777a

// 重置表格样式
table
  margin 0
  border-collapse collapse

th .cell
  text-align center

tr 
  border 0 none

.el-table__body, .el-table__footer, .el-table__header 
  border-collapse collapse


.el-table th.is-leaf 
  border-bottom 0 none
#message-container
  z-index 10

#message-container .message.move-in i 
  font-size 20px !important