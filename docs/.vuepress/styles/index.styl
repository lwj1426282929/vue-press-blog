.theme-default-content code 
  background #e1f3d8
  margin 0 5px
  color #d63200

html, body 
  width 100%
  height 100%

.page-edit, .page-nav, h1 
  position relative
  z-index 2


.en, .zh
  margin-bottom 3em

.auth-info
  font-style oblique
  font-family Garamond

@media (max-width: 419px) 
  .theme-default-content div[class*="language-"] 
    margin 0

.link-active
  color #e2777a
  
#message-container
  z-index 10

#message-container .message.move-in i 
  font-size 20px !important

.medium-zoom-image
  box-shadow: 0 5px 20px 0 rgba(0,0,0,.4)
  position relative
  width 100%
  margin 10px
  border-radius 8px